<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#E3F2FD"
    card_view:cardCornerRadius="24dp"
    android:layout_marginBottom="24dp"
    android:id="@+id/card_view"
    >

    <RelativeLayout
        android:id="@+id/Linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/interested_base_layout"
            android:layout_alignParentRight="true"
            android:text="clear"
            android:textSize="10sp"
            android:textStyle="bold"
            android:id="@+id/clear_base_layout"
            android:layout_margin="16dp"/>
        <TextView
            android:id="@+id/title_base_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load"
            android:textSize="30sp"
            android:textStyle="bold"
            android:fontFamily="@font/kaushanscriptregular"
            android:textColor="#37474F"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Interested?"
            android:textSize="10sp"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            android:id="@+id/interested_base_layout"/>
        <ImageView
            android:id="@+id/image_view_base_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_base_layout"
            />
        <TextView
            android:id="@+id/discription_base_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             android:layout_below="@id/image_view_base_layout"
            android:fontFamily="@font/pacifico"
            android:textColor="#37474F"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>